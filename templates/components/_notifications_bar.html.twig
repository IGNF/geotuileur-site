{% block notificationsBar %}
    {# notification de saturation d'espace de stockage #}
    {% if hasLowStorage == 1 %}
        <div class="notifications-bar">
            <div class="d-flex justify-content-between">
                <div class="d-flex">
                    <i class="icons-alert mx-2"></i>
                    Attention votre espace de stockage arrive à saturation,&nbsp;
                    <a href="{{ path('plage_datastore_manage_storage', {datastoreId: datastore._id}) }}" class="text-danger fw-bold">libérez de l'espace dans votre espace de travail</a>
                </div>
                <button class="notifications-bar-close-btn mx-2"><i class="icon-close"></i></button>
            </div>            
        </div>
    {% endif %}
{% endblock %}

{% block javascripts %}
	{{ encore_entry_script_tags('notifications-bar') }}
{% endblock %}
