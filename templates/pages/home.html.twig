{% trans_default_domain "PlageWebClient" %}

{% extends 'base.html.twig' %}

{% import "components/_editorial-macros.html.twig" as editorial_macros %}

{% block title %}{{ 'home.title_long'| trans }}{% endblock %}

{% set hasBreadcrumb = 0 %}

{% set pageTitle = "home.heading" | trans %}

{% if app.user %}
    {% set titleBtn = {'target': path('plage_datastore_index'), 'text': 'home.start'|trans } %}
{% else %}
    {% set titleBtn = {'target': path('plage_security_login'), 'text': 'home.start'|trans } %}
{% endif %}

{% block customheaderNav %}
    {% include "components/_home_header.html.twig"%}
{% endblock %}

{% block meta %}
    <meta name="description" content="{{ 'home.meta_desc' | trans }}"/>
{% endblock %}

