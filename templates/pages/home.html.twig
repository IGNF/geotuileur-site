    <div class="container-content block-space" id="how-it-works">
        <div class="o-mea">
            <h2>Comment ça marche ?</h2>
            <div class="mea-container">
                <div class="mea-item bg-gray-200">
                    <a href="{{ path('plage_doc')~'#upload' }}">
                        <img class="mea-img" alt="Je dépose ma donnée" src="{{ asset('build/img/home/Deposer.png') }}"/>
                        <h3>Je dépose ma donnée</h3>
                    </a>
                </div>
                <div class="mea-item bg-gray-200">
                    <a href="{{ path('plage_doc')~'#generate' }}">
                        <img class="mea-img" alt="Je crée mon flux" src="{{ asset('build/img/home/Tuile@1x.png') }}"/>
                        <h3>Je crée mon flux</h3>
                    </a>
                </div>
                <div class="mea-item bg-gray-200">
                    <a href="{{ path('plage_doc')~'#publish' }}">
                        <img class="mea-img" alt="Je publie mon flux" src="{{ asset('build/img/home/Diffuser@1x.png') }}"/>
